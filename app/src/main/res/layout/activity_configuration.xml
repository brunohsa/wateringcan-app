<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wateringcan.com.br.wateringcan.ConfigurationActivity"
    android:background="@android:color/white">


    <ProgressBar
        android:id="@+id/progressBarConfigs"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/configRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="12dp"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBarConfigs"
        android:padding="15dp"
        android:visibility="gone">

        <Switch
            android:id="@+id/swtAutomaticRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="Atualizar Relatórios Automáticamente" />
    </RelativeLayout>

</RelativeLayout>
